<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/furniture_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        tools:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/furniture_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Colored chair"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/furniture_image"
        app:layout_constraintStart_toEndOf="@+id/furniture_image"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$2000"
        app:layout_constraintStart_toStartOf="@+id/furniture_name"
        app:layout_constraintTop_toBottomOf="@+id/furniture_name"/>

    <ImageButton
        android:id="@+id/favourite_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/favorite"
        app:layout_constraintTop_toBottomOf="@+id/furniture_image"
        app:layout_constraintStart_toStartOf="@+id/furniture_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:text="Move to wishlist"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@+id/favourite_image"
        app:layout_constraintBottom_toBottomOf="@+id/favourite_image"
        app:layout_constraintStart_toEndOf="@+id/favourite_image"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>